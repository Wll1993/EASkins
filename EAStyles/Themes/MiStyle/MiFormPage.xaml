<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:wfi="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
                    xmlns:Mi="clr-namespace:EAStyles.Controls.MiStyle">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/EAStyles;component/Themes/MiStyle/MiBase.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <Style TargetType="{x:Type Mi:MiFormPage}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Mi:MiFormPage}">
                    <Border>
                        <wfi:WindowsFormsHost x:Name="formHost" Child="{TemplateBinding FormContent}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <!--<Trigger Property="FormContent" Value="{x:Null}">
                            <Setter TargetName="formHost" Property="Child" Value="{x:Null}"/>
                        </Trigger>-->
                    </ControlTemplate.Triggers>
                </ControlTemplate>                
            </Setter.Value>
        </Setter>        
    </Style>
</ResourceDictionary>